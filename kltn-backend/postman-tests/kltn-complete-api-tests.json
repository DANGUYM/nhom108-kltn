            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{temp_user_id}}\",\n  \"otpCode\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/verify-otp?isChecked=true",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "verify-otp"],
