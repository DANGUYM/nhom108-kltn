{
  "info": {
    "name": "Favorite API",
    "description": "Collection for testing FavoriteController APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Add to Favorites",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": 1,\n  \"productId\": 100\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/favorites",
          "host": ["{{baseUrl}}"],
          "path": ["favorites"]
        }
      }
    },
    {
      "name": "Remove from Favorites",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": 1,\n  \"productId\": 100\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/favorites",
          "host": ["{{baseUrl}}"],
          "path": ["favorites"]
        }
      }
    },
    {
      "name": "Get User Favorites (Paginated)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/favorites/users/1?page=0&size=10&sortBy=createdDate&sortDir=desc",
          "host": ["{{baseUrl}}"],
          "path": ["favorites", "users", "1"],
          "query": [
            { "key": "page", "value": "0" },
            { "key": "size", "value": "10" },
            { "key": "sortBy", "value": "createdDate" },
            { "key": "sortDir", "value": "desc" }
          ]
        }
      }
    },
    {
      "name": "Get User Favorites List",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/favorites/users/1/list",
          "host": ["{{baseUrl}}"],
          "path": ["favorites", "users", "1", "list"]
        }
      }
    },
    {
      "name": "Check Product Favorited",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/favorites/users/1/products/100/check",
          "host": ["{{baseUrl}}"],
          "path": ["favorites", "users", "1", "products", "100", "check"]
        }
      }
    },
    {
      "name": "Get User Favorites Count",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/favorites/users/1/count",
          "host": ["{{baseUrl}}"],
          "path": ["favorites", "users", "1", "count"]
        }
      }
    }
  ],
  "event": [],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080/api/v1" },
    { "key": "token", "value": "" }
  ]
}

